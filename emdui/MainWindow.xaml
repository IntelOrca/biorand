<Window x:Class="emdui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:emdui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="menuOpen_Click" />
                <MenuItem Header="Save" Click="menuSave_Click" />
            </MenuItem>
            <MenuItem Header="Texture">
                <MenuItem Header="Import" Click="menuImportTim_Click" />
                <MenuItem Header="Export" Click="menuExportTim_Click" />
            </MenuItem>
        </Menu>
        <Grid DockPanel.Dock="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ListBox Grid.Column="0" x:Name="listObjects" SelectionChanged="listObjects_SelectionChanged" Width="100" />
                <ListBox Grid.Column="1" x:Name="listPrimitives" SelectionChanged="listPrimitives_SelectionChanged" Width="100" />
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0" x:Name="textPrimitive" IsReadOnly="True" HorizontalContentAlignment="Stretch" />
                    <Viewport3D Grid.Row="1" Name="myViewport" />
                </Grid>
            </Grid>
            <Image Grid.Row="1" x:Name="timImage" Loaded="mainWindow_Loaded" />
        </Grid>
    </DockPanel>
</Window>
