<UserControl x:Class="emdui.SceneViewport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:emdui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#FF9797FF"
            BorderBrush="Black"
            BorderThickness="1"
            Margin="4"
            PreviewMouseDown="container_MouseDown"
            PreviewMouseMove="container_MouseMove"
            PreviewMouseWheel="container_PreviewMouseWheel">
        <Viewport3D Name="viewport" />
    </Border>
</UserControl>
